# Dockerfile for pre-built artifacts only
# Build artifacts should be in ./dist directory before building this image
FROM nginx:alpine

# Copy pre-built assets
COPY dist /usr/share/nginx/html

# Copy custom nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
